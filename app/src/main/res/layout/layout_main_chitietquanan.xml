<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include layout="@layout/layout_toolbar" />
<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="?attr/actionBarSize"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:textColor="@color/colorAccent"
                android:background="@color/colorBlack"
                android:padding="5dp"
                android:drawableTop="@drawable/ic_camera"
                android:text="@string/taianh" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/colorAccent"
                android:background="@color/colorBlack"
                android:padding="5dp"
                android:textAllCaps="false"
                android:drawableTop="@drawable/ic_location"
                android:text="@string/checkin" />

            <Button
                android:id="@+id/btnBinhLuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/colorAccent"
                android:background="@color/colorBlack"
                android:padding="5dp"
                android:textAllCaps="false"
                android:drawableTop="@drawable/ic_comment"
                android:text="@string/binhluan" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/colorAccent"
                android:background="@color/colorBlack"
                android:padding="5dp"
                android:textAllCaps="false"
                android:drawableTop="@drawable/ic_bookmark"
                android:text="@string/luulai" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/colorAccent"
                android:background="@color/colorBlack"
                android:padding="5dp"
                android:textAllCaps="false"
                android:drawableTop="@drawable/ic_share"
                android:text="@string/chiase" />
        </LinearLayout>
        <ImageView
            android:id="@+id/imgHinhQuanAnChiTiet"
            android:scaleType="fitXY"
            android:src="@drawable/background"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp" />
        <TextView
            android:id="@+id/txtTenQuanAnChiTiet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gogi house"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            />
        <TextView
            android:id="@+id/txtDiaChiQuanAnChiTiet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="102 Khuất Duy Tiến Hà Nội"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_bg_trangchu"
            android:layout_marginTop="10dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1"
                >

                <TextView
                    android:id="@+id/tongSoHinhAnh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textStyle="bold"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/taianh"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1"
                >

                <TextView
                    android:id="@+id/tongSoCheckIn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textStyle="bold"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/checkin" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1"
                >

                <TextView
                    android:id="@+id/tongSoBinhLuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textStyle="bold"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/binhluan" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1"
                >

                <TextView
                    android:id="@+id/tongSoLuuLai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textStyle="bold"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/luulai" />

            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_bg_trangchu"
            android:layout_marginTop="10dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            >
            <TextView
                android:id="@+id/txtThoiGianHoatDong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7:00 - 20:00"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/txtTrangThaiHoatDong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chưa mở cửa"
                android:textStyle="bold"
                android:textSize="18sp"
                />
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>